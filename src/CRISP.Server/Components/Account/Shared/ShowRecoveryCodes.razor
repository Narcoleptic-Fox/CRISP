<div class="space-y-6">
    <div>
        <h2 class="text-lg font-medium text-foreground">Recovery codes</h2>
        <p class="text-sm text-muted-foreground">Save these codes in a secure location.</p>
    </div>
    
    <StatusMessage Message="@StatusMessage" />
    
    <div class="rounded-lg border border-amber-200 dark:border-amber-800 bg-amber-50 dark:bg-amber-950/50 p-4">
        <div class="flex">
            <svg class="h-5 w-5 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div class="ml-3">
                <p class="text-sm font-medium text-amber-800 dark:text-amber-200">
                    Keep these codes safe
                </p>
                <p class="mt-1 text-sm text-amber-700 dark:text-amber-300">
                    If you lose your device and don't have these recovery codes, you will lose access to your account. 
                    Each code can only be used once.
                </p>
            </div>
        </div>
    </div>
    
    <div class="rounded-lg border border-border bg-muted/50 p-4">
        <div class="grid grid-cols-2 gap-2 sm:grid-cols-5">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <code class="rounded bg-background px-2 py-1 text-sm font-mono text-center border border-border">
                    @recoveryCode
                </code>
            }
        </div>
    </div>
    
    <div class="flex">
        <a href="Account/Manage/TwoFactorAuthentication"
            class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors">
            Done
        </a>
    </div>
</div>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
